<div class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-max lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-10 sm:max-w-3xl xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Edit your account
        </div>
        <%= form_with(model: @user) do |f| %>  
          <div class="grid grid-cols-6 gap-x-6 gap-y-2">
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :first_name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :first_name, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "first_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :last_name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :last_name, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :phone_number, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.number_field :phone_number, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :country, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :country, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :city, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :city, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :zip_code, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :zip_code, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :address, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :address, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 md:col-span-3">
              <%= f.label :birthday, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>

              <div class="flex space-x-2">
                <%= f.date_select :birthday,
                      { start_year: 1900, end_year: 100.years.from_now.year },
                      { class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "birthday" } %>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :languages, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :languages, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :education, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :education, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :work_history, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_field :work_history, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6">
              <%= f.label :about_me, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_area :about_me, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", rows: 6, autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6">
              <%= f.label :hobbies, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_area :hobbies, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>

            <div class="col-span-6">
              <%= f.label :skills, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= f.text_area :skills, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "last_name" %>
            </div>
            
            <div class="col-span-6 mt-2">
              <%= f.submit "Update", class:"text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
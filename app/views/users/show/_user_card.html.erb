<div class="w-auto p-4 mb-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
  <div class="items-start mb-2">
    <% if @user.avatar.present? %>
      <%= image_tag @user.avatar.variant(:avatar), class:"rounded-2xl" %>
    <% else %>
      <%= image_tag("https://via.placeholder.com/100", class:"rounded-2xl")%>
    <% end %>
  </div>
  <div class="mb-2">
    <div class="text-xl font-bold text-gray-900 dark:text-white">
      <%= @user.full_name%>
    </div>
    <ul class="mt-2 text-sm font-normal text-gray-500 dark:text-gray-400">
      <li class="flex items-center">
        <%= icon('fa-solid text-black mr-2', 'briefcase')%>
        Full Stack Developer
      </li>
      <li class="flex items-center">
        <%= icon('fa-xs fa-solid text-black mr-2', 'users')%>
        Development
      </li>
    </ul>
  </div>
  <div class="mt-4 space-y-3">
    <div>
      <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
        Email address
      </div>
      <div class="text-sm font-normal text-black dark:text-gray-400">
        <%= @user.email%>
      </div>
    </div>
    <div>
      <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
        Home address
      </div>
      <div class="text-sm font-normal text-black dark:text-gray-400">
        <%= @user.full_address%> <br>
        <%= @user.country%>
      </div>
    </div>
    <div>
      <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
        Phone number
      </div>
      <div class="text-sm font-normal text-black dark:text-gray-400">
        <%= @user.phone_number%>
      </div>
    </div>
  </div>
</div>
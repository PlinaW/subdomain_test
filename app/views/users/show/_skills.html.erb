<div class="w-auto p-4 mb-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
  <div class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
    Skills
  </div>
  <div class="flex flex-wrap gap-2">
    <% @user.skills.split(',').each do |skill| %>
      <div class=" bg-green-100 text-green-800 font-medium px-3 py-1.5 rounded dark:bg-green-900 dark:text-green-300">
          <%= skill.titleize %>
      </div>
    <% end %>
  </div>
</div>  
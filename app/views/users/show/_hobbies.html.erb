<div class="w-auto p-4 mb-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
  <div class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
      Hobbies
  </div>
  <div class="flex flex-wrap gap-2">
    <% @user.hobbies.split(',').each do |hobby| %>
      <div class=" bg-blue-100 text-blue-800 font-medium px-3 py-1.5 rounded dark:bg-blue-900 dark:text-blue-300">
          <%= hobby.titleize %>
      </div>
    <% end %>
  </div>
</div>   